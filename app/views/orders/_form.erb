<%= form_for order do |f| %>
<%= f.label :site%><br>
<%= f.collection_select :site_id, 
    Site.all, :id, :description %><br>
<%= f.label :first_name%><br>
<%= f.text_area :first_name %><br>
<%= f.label :last_name%><br>
<%= f.text_area :last_name %><br>
<%= f.label :email%><br>
<%= f.text_area :email %><br>
<%= f.fields_for :sites do |builder|%>
<%= render 'box_fields', f: builder %>
<% end %>
<%= f.submit %>
<% end %>
